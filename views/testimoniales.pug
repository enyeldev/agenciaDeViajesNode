extends ./layouts/index


block contenido
    main.container.mt-5     
        h1.text-center.mt-5 #{pagina}
        
        blockquote.text-center Lee sobre nuestros clientes y sus expereincias 
        include ./layouts/bloque_testimoniales

        .row
            .col-md-12 
                h2.d-block.w-100.text-center Agrega un Testimoial

                if(mensajeError) 
                    .alert.alert-danger.text-center.col
                        p #{mensajeError}
                            
                

                .row.justify-content-center.col
                    .col-md-8 
                        form(action="/testimoniales" method="POST")
                            .form-gorup 
                                label(for="nombre") Nombre   
                                input#nombre(type="text" , placeholder='Juan, Pablo, Maria...' , name='nombre', class='form-control' value= nombre)
                            .form-gorup 
                                label(for="nombre") Correo Electronico   
                                input#correo(type="email" , placeholder='example@example.com' , name='correo', class='form-control' value= correo)
                            .form-gorup 
                                label(for="mensaje") Mensaje 
                                textarea#mensaje(name="mensaje", cols="30", rows="5" class='form-control' , placeholder='Lorem ipsum dolor, sit amet consectetur adipisicing elit. Nemo repellendus necessitatibus')= mensaje

                            input(type="submit", value="Enviar",class="btn btn-success btn-block mt-2" ,)


                                